<view class="container">
  <image src='/img/t1.png' class='t1'></image>
  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="15"  markers="{{markers}}" bindmarkertap="markertap"  show-location style="width: 100%; height: 300px;"></map>
  <view class="tel">
    <view class="tel_he">
      <view class="call" bindtap="callhe">
        <image src="/img/he.png" width="100%" />
      </view>
      呼叫新郎
    </view>
    <view class="tel_she">
      <view class="call" bindtap="callshe">
        <image src="/img/she.png" width="100%" />
      </view>
      呼叫新娘
    </view>
  </view>

  <view class='copyright' >Made With ❤ By 邰祥 & 孙娟</view>
</view>